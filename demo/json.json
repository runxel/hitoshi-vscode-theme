{
  "env": {
    "es6": true,
    "mocha": true,
    "node": false
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "third": {
      "you-could-style": "hierarchies as well"
    }
  }
}
